{
  "framework": "qunit",
  "launch_in_dev": [ "PhantomJS" ],
  "before_tests": "coffee -c test/*.coffee; coffee -c test/**/*.coffee",
  "on_exit": "find test/. -type f -name \"*.js\" | xargs rm -f",
  "src_files": [
    "public/scripts/vendor.js",
    "public/scripts/app.js",
    "test/helpers.coffee",
    "test/**/*_test.coffee"
  ],
  "css_files": [
    "public/styles/app.css"
  ],
  "serve_files": [
    "public/scripts/vendor.js",
    "public/scripts/app.js",
    "test/helpers.js",
    "test/**/*_test.js"
  ]
}
